set previewer ~/.config/lf/previewer
set cleaner ~/.config/lf/cleaner

#Basic Setting
set preview true
set hidden false
set drawbox false
set icons true
set ruler true
set rulerfmt "%d  |%a  |%p  |\033[7;31m %m \033[0m  |\033[7;33m %c \033[0m  |\033[7;35m %s \033[0m  |\033[7;34m %f \033[0m  |%i/%t"
set ratios 1:2


map <enter> open
map r rename
map d delete
map c copy
map x cut
map v paste
map q quit
map m %mkdir New_Folder; reload
map . set hidden!
map s invert
map <space> toggle
